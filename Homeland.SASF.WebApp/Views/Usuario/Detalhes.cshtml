@model RegisterViewModel

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-8">
                        <h3 class="mb-0">Usuário</h3>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Atualizar" asp-antiforgery="true" method="post">
                    <h6 class="heading-small text-muted mb-4">Informações</h6>
                    <input type="hidden" asp-for="Id" />
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label asp-for="Login" class="form-control-label" for="input-username">Usuário</label>
                                    <input asp-for="Login" type="text" id="input-username" class="form-control" placeholder="Ex: gerente">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label asp-for="Password" class="form-control-label" for="input-password">Senha</label>
                                    <input asp-for="Password" type="password" id="input-password" class="form-control" placeholder="*******">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword" class="form-control-label" for="input-confirm">Confirmar Senha</label>
                                    <input asp-for="ConfirmPassword" type="password" id="input-confirm" class="form-control" placeholder="*******">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label asp-for="Email" class="form-control-label" for="input-email">E-mail</label>
                                    <input asp-for="Email" type="email" id="input-email" class="form-control" placeholder="exemplo@email.com">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label asp-for="PhoneNumber" class="form-control-label" for="input-telefone">Telefone</label>
                                    <input asp-for="PhoneNumber" type="number" id="input-telefone" class="form-control" placeholder="51 99999-9999">
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="text-center">
                        <button id="botao-update" type="submit" class="btn btn-primary mt-4">Salvar</button>
                        <button id="botao-excluir" class="btn btn-primary mt-4">Excluir</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>