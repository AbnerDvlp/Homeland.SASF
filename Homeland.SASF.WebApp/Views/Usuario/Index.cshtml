@model UsuarioViewModel

<div class="row">
    <div class="col">
        <div class="card">
            <!-- Card header -->
            <div class="card-header border-0">
                <h3 class="mb-0">Funcionários</h3>
            </div>
            <!-- Light table -->
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            @*<th scope="col" class="sort" data-sort="id">Matrícula</th>*@
                            <th scope="col" class="sort" data-sort="nome">Usuario</th>
                            <th scope="col" class="sort" data-sort="email">E-mail</th>
                            <th scope="col" class="sort" data-sort="telefone">Telefone</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var usuario in Model.Usuarios)
                        {
                            <tr>

                                @*<td>
                                    <a asp-action="Detalhes" asp-controller="Funcionario" asp-route-id="@funcionario.Matricula">
                                        <span id="@funcionario.Matricula" class="name mb-0 text-sm">@funcionario.Matricula</span>
                                    </a>
                                </td>*@
                                <td>
                                    <a asp-action="Detalhes" asp-controller="Usuario" asp-route-id="@usuario.Id">
                                        <span class="name mb-0 text-sm">@usuario.UserName</span>
                                    </a>
                                </td>
                                <td>
                                    <span class="name mb-0 text-sm">@usuario.Email</span>
                                </td>
                                <td>
                                    <span class="name mb-0 text-sm">@usuario.PhoneNumber</span>
                                </td>
                                <td class="text-right">
                                    <div class="dropdown">
                                        <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                            <a class="dropdown-item" asp-controller="@ViewContext.RouteData.Values["controller"].ToString()" asp-action="Detalhes" asp-route-id="@usuario.Id">Editar</a>
                                            <a class="dropdown-item" asp-controller="@ViewContext.RouteData.Values["controller"].ToString()" asp-action="Remover" asp-route-id="@usuario.Id">Excluir</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- Card footer -->
            @*<div class="card-footer py-4">
                <nav aria-label="...">
                    <ul class="pagination justify-content-end mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">
                                <i class="fas fa-angle-left"></i>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">
                                <i class="fas fa-angle-right"></i>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>*@
        </div>
    </div>
</div>
