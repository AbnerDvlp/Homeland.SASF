@model OcorrenciaViewModel

<div class="row">
    <div class="col">
        <div class="card">
            <!-- Card header -->
            <div class="card-header border-0">
                <h3 class="mb-0">Ocorrências</h3>
            </div>
            <!-- Light table -->
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col" class="sort" data-sort="id">Matrícula</th>
                            <th scope="col" class="sort" data-sort="estado">Como está seu estado de Saúde?</th>
                            <th scope="col" class="sort" data-sort="sintomas">Possui algum sintoma?</th>
                            <th scope="col" class="sort" data-sort="vacina">Já se vacinou contra o COVID?</th>
                            <th scope="col" class="sort" data-sort="data">Data</th>
                            @*<th scope="col"></th>*@
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var ocorrencia in Model.Ocorrencias)
                        {
                            <tr>

                                <td>
                                    <span id="@ocorrencia.matricula" class="name mb-0 text-sm">@ocorrencia.matricula</span>
                                </td>
                                <td>
                                    <span class="name mb-0 text-sm">@ocorrencia.respostaEstado</span>
                                </td>
                                <td>
                                    <span class="name mb-0 text-sm">@ocorrencia.respostaSintomas</span>
                                </td>
                                <td>
                                    <span class="name mb-0 text-sm">@ocorrencia.respostaVacina</span>
                                </td>
                                <td>
                                    <span class="name mb-0 text-sm">@ocorrencia.data</span>
                                </td>
                                @*<td class="text-right">
                                    <div class="dropdown">
                                        <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                            <a class="dropdown-item" asp-controller="@ViewContext.RouteData.Values["controller"].ToString()" asp-action="Editar">Editar</a>
                                            <a class="dropdown-item" asp-controller="@ViewContext.RouteData.Values["controller"].ToString()" asp-action="Excluir">Excluir</a>
                                        </div>
                                    </div>
                                </td>*@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
