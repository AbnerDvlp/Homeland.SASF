@model PetPerfeitoViewModel

<div class="row">
    <div class="col">
        <div class="card">
            <!-- Card header -->
            <div class="card-header border-0">
                <h3 class="mb-0">Pets (PetPerfeito)</h3>
            </div>
            <!-- Light table -->
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col" class="sort" data-sort="nome">Nome</th>
                            <th scope="col" class="sort" data-sort="especie">Espécie</th>
                            <th scope="col" class="sort" data-sort="sexo">Sexo</th>
                            <th scope="col" class="sort" data-sort="porte">Porte</th>
                            <th scope="col" class="sort" data-sort="cidade">Cidade</th>
                            <th scope="col" class="sort" data-sort="estado">Estado</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var pet in Model.Pets)
                        {
                            <tr>
                                <td>
                                    <span class="name mb-0 text-sm">@pet.Nome</span>
                                </td>
                                <td>
                                    <span class="name mb-0 text-sm">@pet.Especie</span>
                                </td>
                                <td>
                                    <span class="name mb-0 text-sm">@pet.Sexo</span>
                                </td>
                                <td>
                                    <span class="name mb-0 text-sm">@pet.Porte</span>
                                </td>
                                <td>
                                    <span class="name mb-0 text-sm">@pet.Cidade</span>
                                </td>
                                <td>
                                    <span class="name mb-0 text-sm">@pet.Estado</span>
                                </td>
                                <td class="text-right">
                                    <div class="dropdown">
                                        <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                            <a class="dropdown-item" asp-controller="@ViewContext.RouteData.Values["controller"].ToString()" asp-action="Editar">Editar</a>
                                            <a class="dropdown-item" asp-controller="@ViewContext.RouteData.Values["controller"].ToString()" asp-action="Excluir">Excluir</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
